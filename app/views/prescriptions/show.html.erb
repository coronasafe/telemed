<div class="flex items-end py-1 mt-4 justify-end max-w-3xl mx-auto">
  <%= link_to 'View Contact', contact_path(@prescription.contact), class: 'mr-2 inline-flex text-bold items-center px-4 py-2 rounded-md text-sm font-medium  shadow leading-5 bg-white rounded text-gray-800' %>
  <%= link_to 'Update Prescription', edit_prescription_path(@prescription), class: 'inline-flex text-bold items-center px-4 py-2 rounded-md text-sm font-medium  shadow leading-5 bg-white rounded text-gray-800' %>
</div>
<div class="mt-4 bg-white shadow overflow-hidden  sm:rounded-lg max-w-3xl mx-auto">
  <div class="px-4 py-3 border-b border-gray-200 sm:px-6 flex justify-between items-center">

    <h3 class="text-3xl font-semibold  leading-6 text-gray-900">
      Prescription </h3>
    <div class=" text-3xl font-semibold px-2 -py-1 rounded shadow bg-<%= @prescription.color %>-200">
      <%= @prescription.delivery_status.titleize %>
    </div>
  </div>
  <div class="px-4 py-5 sm:px-6">
    <dl class="grid grid-cols-1 col-gap-4 row-gap-8 sm:grid-cols-3 ">
      <div class="sm:col-span-1">
        <dt class="text-sm leading-5 font-medium text-gray-500">
          Reg No:
        </dt>
        <dd class="mt-1 text-sm leading-5 text-gray-900">
          EKM<%= @prescription.contact.id %>        </dd>
      </div>
      <div class="sm:col-span-1">
        <dt class="text-sm leading-5 font-medium text-gray-500">
          Name
        </dt>
        <dd class="mt-1 text-sm leading-5 text-gray-900">
          <%= @prescription.contact.name %>
        </dd>
      </div>
      <div class="sm:col-span-1">
        <dt class="text-sm leading-5 font-medium text-gray-500">
          Source
        </dt>
        <dd class="mt-1 text-sm leading-5 text-gray-900">
          <%= @prescription.source.titleize %>
        </dd>
      </div>

      <div class="sm:col-span-1">
        <dt class="text-sm leading-5 font-medium text-gray-500">
          Age
        </dt>
        <dd class="mt-1 text-sm leading-5 text-gray-900">
          <%= @prescription.contact.dob %>
        </dd>
      </div>
      <div class="sm:col-span-1">
        <dt class="text-sm leading-5 font-medium text-gray-500">
          Gender
        </dt>
        <dd class="mt-1 text-sm leading-5 text-gray-900">
          <%= @prescription.contact.gender %>
        </dd>
      </div>
      <div class="sm:col-span-2">
        <p class="mt-1 max-w-2xl text-sm leading-5 text-gray-500">
          Prescription was created by
          <span class="font-bold"><%= @prescription.creator.name %></span> on
          <span class="text-sm"><%= @prescription.created_at.strftime("%m/%d/%Y at %I:%M%p") %></span>
        </p>
      </div>
    </dl>
    <div class="mt-4">
      <div class="flex flex-col">
        <div class="-my-2 py-2 overflow-x-auto sm:-mx-6 sm:px-6 lg:-mx-8 lg:px-8">
          <div class="align-middle inline-block min-w-full shadow overflow-hidden sm:rounded-lg border-b border-gray-200">
            <table class="min-w-full">
              <thead>
              <tr>
                <th class="px-6 py-3 border-b border-gray-200 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                  Medicine
                </th>
                <th class="px-6 py-3 border-b border-gray-200 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                  Dosage
                </th>
                <th class="px-6 py-3 border-b border-gray-200 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                  Days
                </th>
              </tr>
              </thead>
              <tbody>
              <% @prescription.medicines.each do |m| %>
                <tr class="bg-white">
                  <td class="px-6 py-4 whitespace-no-wrap text-sm leading-5 font-medium text-gray-900">
                    <%= m['medicine'] %>
                  </td>
                  <td class="px-6 py-4 whitespace-no-wrap text-sm leading-5 text-gray-500">
                    <%= m['dosage'] %>
                  </td>
                  <td class="px-6 py-4 whitespace-no-wrap text-sm leading-5 text-gray-500">
                    <%= m['days'] %>
                  </td>
                </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    <div class="flex justify-between mt-4">
      <div class="">
        <dt class="text-sm leading-5 font-medium text-gray-500">
          Scheme
        </dt>
        <dd class="mt-1 text-sm leading-5 text-gray-900">
          <%= @prescription.scheme %>
        </dd>
      </div>
      <div class="">
        <dt class="text-sm leading-5 font-medium text-gray-500">
          Supplier
        </dt>
        <dd class="mt-1 text-sm leading-5 text-gray-900">
          <%= @prescription.supplier %>
        </dd>
      </div>
    </div>
  </div>
</div>