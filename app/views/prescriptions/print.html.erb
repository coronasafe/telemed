<% @skip_header = true %>
<div class="mt-4 bg-white shadow overflow-hidden  sm:rounded-lg max-w-3xl mx-auto">
  <div class="px-4 py-3 border-b border-gray-200 sm:px-6 text-center">
    <h1 class="font-semibolsd text-3xl">COVID-19 CONTROL CELL</h1>
    <h2 class="font-semisbold text-2xl">TELEMEDICINE â€“ COMMUNITY PHARMACY</h2>
    <h3 class="text-3xl font-semibold  leading-6 text-gray-900 mt-4">
      PRESCRIPTION
    </h3>
  </div>
  <div class="px-4 py-5 sm:px-6">
    <dl class="flex flex-row flex-wrap">
      <div class="w-1/3 mt-4">
        <dt class="text-sm leading-5 font-medium text-gray-500">
          Reg No:
        </dt>
        <dd class="mt-1 text-sm leading-5 text-gray-900">
          EKM<%= @prescription.contact.id %>        </dd>
      </div>
      <div class="w-1/3 mt-4">
        <dt class="text-sm leading-5 font-medium text-gray-500">
          Name
        </dt>
        <dd class="mt-1 text-sm leading-5 text-gray-900">
          <%= @prescription.contact.name %>
        </dd>
      </div>
      <div class="w-1/3 mt-4">
        <dt class="text-sm leading-5 font-medium text-gray-500">
          Source
        </dt>
        <dd class="mt-1 text-sm leading-5 text-gray-900">
          <%= @prescription.source.titleize %>
        </dd>
      </div>

      <div class="w-1/3 mt-4">
        <dt class="text-sm leading-5 font-medium text-gray-500">
          Age
        </dt>
        <dd class="mt-1 text-sm leading-5 text-gray-900">
          <%= @prescription.contact&.age_from_dob %> Years
        </dd>
      </div>
      <div class="w-1/3 mt-4">
        <dt class="text-sm leading-5 font-medium text-gray-500">
          Gender
        </dt>
        <dd class="mt-1 text-sm leading-5 text-gray-900">
          <%= @prescription.contact.gender %>
        </dd>
      </div>
      <div class="w-1/3 mt-4">
        <dt class="text-sm leading-5 font-medium text-gray-500">
          Date
        </dt>
        <dd class="mt-1 text-sm leading-5 text-gray-900">
          <%= @prescription.created_at %>
        </dd>
      </div>
    </dl>
    <%= render 'show_medicines', medicines: @prescription.medicines %>
    <div class="flex justify-between">
      <div class="sm:col-span-2 mt-4 w-1/3">
        <dt class="text-sm leading-5 font-medium text-gray-500">
          Remarks
        </dt>
        <dd class="mt-1 text-sm leading-5 text-gray-900">
          <%= @prescription.remarks %>
        </dd>
      </div>
    </div>
    <div class="flex justify-between mt-4">
      <div class="w-1/3">
        <dt class="text-sm leading-5 font-medium text-gray-500">
          Prescribed By
        </dt>
        <dd class="mt-1 text-sm leading-5 text-gray-900b font-bold">
          <%= @prescription.creator.name %>
        </dd>
      </div>
      <div class="p-24">
      </div>
    </div>
  </div>
</div>