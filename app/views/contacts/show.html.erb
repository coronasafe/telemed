<div class="bg-white shadow overflow-hidden  sm:rounded-lg">
  <div class="px-4 py-5 border-b border-gray-200 flex flex-col items-between justify-center  lg:flex-row lg:items-center lg:justify-between sm:px-6">
    <div>
      <h3 class="text-lg leading-6 font-medium text-gray-900">
        <%= @contact.uid %>/
        <%= @contact.name.titleize %>,
        <% if @contact.dob.present? %>
          <%= @contact.age_from_dob %> Years
        <% end %>
      </h3>
      <p class="mt-1 max-w-2xl text-sm leading-5 text-gray-500">
        Information regarding the Contact.
      </p>
    </div>

    <div class="mt-3 lg:mt-0">
      <%= link_to 'Edit Contact', edit_contact_path(@contact), class: 'inline-flex items-center px-3 py-2 rounded-md text-sm font-medium leading-5 bg-gray-100 text-gray-800' %>
    </div>
  </div>
  <div class="px-4 py-5 sm:p-0">
    <dl>
      <div class="sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6 sm:py-5">
        <dt class="text-sm leading-5 font-medium text-gray-500">
          Name
        </dt>
        <dd class="mt-1 text-sm flex flex-col leading-5 text-gray-900 sm:mt-0 sm:col-span-2">
          <p>
            <%= @contact.name %>
          </p>
        </dd>
      </div>
      <div class="mt-8 sm:mt-0 sm:grid sm:grid-cols-3 sm:gap-4 sm:border-t sm:border-gray-200 sm:px-6 sm:py-5">
        <dt class="text-sm leading-5 font-medium text-gray-500">
          WhatsApp Number, Click to Call
        </dt>
        <dd class="mt-1 text-sm leading-5 text-gray-900 sm:mt-0 sm:col-span-2">
          <%= link_to @contact.phone, "tel:#{@contact.phone}" %>
        </dd>
      </div>
      <% if @contact.alternate_contact.present? %>
        <div class="mt-8 sm:mt-0 sm:grid sm:grid-cols-3 sm:gap-4 sm:border-t sm:border-gray-200 sm:px-6 sm:py-5">
          <dt class="text-sm leading-5 font-medium text-gray-500">
            Alternate Contact Number
          </dt>
          <dd class="mt-1 text-sm leading-5 text-gray-900 sm:mt-0 sm:col-span-2">
            <%= @contact.alternate_contact %>
          </dd>
        </div>
      <% end %>
      <div class="mt-8 sm:mt-0 sm:grid sm:grid-cols-3 sm:gap-4 sm:border-t sm:border-gray-200 sm:px-6 sm:py-5">
        <dt class="text-sm leading-5 font-medium text-gray-500">
          Date of Birth
        </dt>
        <dd class="mt-1 text-sm leading-5 text-gray-900 sm:mt-0 sm:col-span-2">
          <% if @contact.dob.present? %>
            <%= @contact.dob.to_s(:long) %>
          <% end %>
        </dd>
      </div>
      <div class="mt-8 sm:mt-0 sm:grid sm:grid-cols-3 sm:gap-4 sm:border-t sm:border-gray-200 sm:px-6 sm:py-5">
        <dt class="text-sm leading-5 font-medium text-gray-500">
          Gender
        </dt>
        <dd class="mt-1 text-sm leading-5 text-gray-900 sm:mt-0 sm:col-span-2">
          <%= @contact.gender.to_s.capitalize() %>
        </dd>
      </div>
      <div class="mt-8 sm:mt-0 sm:grid sm:grid-cols-3 sm:gap-4 sm:border-t sm:border-gray-200 sm:px-6 sm:py-5">
        <dt class="text-sm leading-5 font-medium text-gray-500">
          Address
        </dt>
        <dd class="mt-1 text-sm leading-5 text-gray-900 sm:mt-0 sm:col-span-2">
          <ul>
            <li class="my-2"><span class="font-bold">House:</span> <span><%= @contact.house_name %></span></li>
            <li class="my-2"><span class="font-bold">Ward: </span><%= @contact.ward %></span></li>
            <li class="my-2"><span class="font-bold">Panchayat: </span><%= @contact.panchayat.name %></span></li>
            <li class="my-2"><span class="font-bold">Landmark: </span><%= @contact.landmark %></span></li>
          </ul>
        </dd>
      </div>

      <div class="mt-8 sm:mt-0 sm:grid sm:grid-cols-3 sm:gap-4 sm:border-t sm:border-gray-200 sm:px-6 sm:py-5">
        <dt class="text-sm leading-5 font-medium text-gray-500">
          Health Care Worker Details
        </dt>
        <dd class="mt-1 text-sm leading-5 text-gray-900 sm:mt-0 sm:col-span-2">
          <ul>
            <li class="my-2"><span class="font-bold">PHC:</span> <span><%= @contact.phc %></span></li>
            <li class="my-2"><span class="font-bold">Name of health worker: </span><%= @contact.health_worker %></span>
            </li>
            <li class="my-2">
              <span class="font-bold">Mobile health worker: </span><%= @contact.number_health_worker %></span></li>
          </ul>
        </dd>
      </div>
      <div class="mt-8 sm:mt-0 sm:grid sm:grid-cols-3 sm:gap-4 sm:border-t sm:border-gray-200 sm:px-6 sm:py-5">
        <dt class="text-sm leading-5 font-medium text-gray-500">
          Old Number
        </dt>
        <dd class="mt-1 text-sm leading-5 text-gray-900 sm:mt-0 sm:col-span-2">
          <span><%= @contact.old_case_id %></span>

        </dd>
      </div>
      <div class="mt-8 sm:mt-0 sm:grid sm:grid-cols-3 sm:gap-4 sm:border-t sm:border-gray-200 sm:px-6 sm:py-5">
        <dt class="text-sm leading-5 font-medium text-gray-500">
          Notes
        </dt>
        <dd class="mt-1 text-sm leading-5 text-gray-900 sm:mt-0 sm:col-span-2">
          <span><%= simple_format(@contact.description) %></span>
        </dd>
      </div>
    </dl>
  </div>
</div>
<div class="mt-4 text-5xl font-semibold border-b-2 ">Consultation History</div>
<div class="mt-4 flex flex-wrap">
  <%= render 'consultations/create_form' %>
  <% @contact.consultations.where.not(id: nil).order(:created_at).reverse.map do |consultation| %>
    <div class="md:w-1/3 w-full p-2">
      <div class="bg-white shadow overflow-hidden  sm:rounded-lg mt-4 p-4 h-full">
        <div class="mt-4 text-3xl font-semibold px-2 -py-1 rounded shadow bg-<%= consultation.action.color %>-200">
          <%= consultation&.action&.name&.titleize %>
        </div>
        <div class="mb-2">
          Requested <%= time_ago_in_words(consultation.created_at) %> ago
        </div>
        <div class="mb-2 text-xs">
          (<%= consultation.created_at.strftime("%m/%d/%Y at %I:%M%p") %>)
        </div>
        <div class="mt-8 sm:mt-0 sm:grid sm:grid-cols-3 sm:gap-4 sm:border-t sm:border-gray-200 sm:py-5">
          <dt class="text-sm leading-5 font-medium text-gray-500">
            Consultation type
          </dt>
          <dd class="mt-1 text-sm leading-5 text-gray-900 sm:mt-0 sm:col-span-2">
            <%= consultation.consultation_type %>
          </dd>
        </div>
        <div class="mt-8 sm:mt-0 sm:grid sm:grid-cols-3 sm:gap-4 sm:border-t sm:border-gray-200 sm:py-5">
          <dt class="text-sm leading-5 font-medium text-gray-500">
            Source of Call
          </dt>
          <dd class="mt-1 text-sm leading-5 text-gray-900 sm:mt-0 sm:col-span-2">
            <%= consultation.source %>
          </dd>
        </div>
        <% if consultation.doctor_id.blank? && current_user.is_admin? %>
          <%= render 'consultations/assign_form', consultation: consultation %>
        <% else %>
          <div class="mt-8 sm:mt-0 sm:grid sm:grid-cols-3 sm:gap-4 sm:border-t sm:border-gray-200 sm:py-5">
            <dt class="text-sm leading-5 font-medium text-gray-500">
              Assigned to
            </dt>
            <dd class="mt-1 text-sm leading-5 text-gray-900 sm:mt-0 sm:col-span-2">
              <%= consultation.doctor&.name %>
            </dd>
          </div>
          <% if current_user.is_admin? %>
            <div>
              <%= link_to 'View Details', consultation_path(consultation), class: 'hover:text-white hover:bg-gray-600 inline-flex items-center px-3 py-2 rounded-md text-sm font-medium leading-5 bg-gray-100 text-gray-800' %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
<div class="mt-4 text-5xl font-semibold border-b-2 ">Prescriptions</div>
<div class="mt-4 pl-2">
  <%= link_to '+ Add a Prescription', new_contact_prescription_path(@contact), class: 'inline-flex text-bold items-center px-4 py-2 rounded-md text-sm font-medium  shadow leading-5 bg-white rounded text-gray-800' %>
</div>
<div class="flex flex-wrap">
  <% @contact.prescriptions.where.not(id: nil).order(:created_at).reverse.map do |prescription| %>
    <div class="md:w-1/3 w-full p-2">
      <div class="bg-white shadow overflow-hidden  sm:rounded-lg mt-4 p-4 h-full">
        <div class="mt-4 text-3xl font-semibold px-2 -py-1 rounded shadow bg-<%= prescription.color %>-200">
          <%= prescription.delivery_status.titleize %>
        </div>
        <div class="my-2">
          Prescribed <%= time_ago_in_words(prescription.created_at) %> ago
        </div>
        <div class="mt-8 sm:mt-0 sm:grid sm:grid-cols-3 sm:gap-4 sm:border-t sm:border-gray-200 sm:py-5">
          <dt class="text-sm leading-5 font-medium text-gray-500">
            Source
          </dt>
          <dd class="mt-1 text-sm leading-5 text-gray-900 sm:mt-0 sm:col-span-2">
            <%= prescription.source %>
          </dd>
        </div>
        <div class="mt-8 sm:mt-0 sm:grid sm:grid-cols-3 sm:gap-4 sm:border-t sm:border-gray-200 sm:py-5">
          <dt class="text-sm leading-5 font-medium text-gray-500">
            Scheme
          </dt>
          <dd class="mt-1 text-sm leading-5 text-gray-900 sm:mt-0 sm:col-span-2">
            <%= prescription.scheme %>
          </dd>
        </div>
        <div class="mt-8 sm:mt-0 sm:grid sm:grid-cols-3 sm:gap-4 sm:border-t sm:border-gray-200 sm:py-5">
          <dt class="text-sm leading-5 font-medium text-gray-500">
            Supplier
          </dt>
          <dd class="mt-1 text-sm leading-5 text-gray-900 sm:mt-0 sm:col-span-2">
            <%= prescription.supplier %>
          </dd>
        </div>
        <div>
          <%= link_to 'View Prescription', prescription_path(prescription), class: 'hover:text-white hover:bg-gray-600 inline-flex items-center px-3 py-2 rounded-md text-sm font-medium leading-5 bg-gray-100 text-gray-800' %>
        </div>
      </div>
    </div>
  <% end %>
</div>
