<% @skip_header = true %>

<div class="flex  flex-col md:flex-row min-h-screen">

  <div class="w-full md:w-1/2 bg-green-400 py-10 md:py-40 md:border-r-2 md:border-green-700 items-center flex">
    <div class="max-w-md mx-auto text-white text-center md:text-left">
      <h1 class="text-3xl md:text-6xl font-bold ">Telemedicine</h1>
      <h2 class="text-xl md:text-3xl font-bold ">CoronaSafe</h2>
    </div>
  </div>
  <div class="w-full md:w-1/2 px-2 items-center flex">
    <div class="max-w-md  text-center mx-auto md:text-left mt-10">
      <h2 class="text-xl font-bold">Log in</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), defaults: { input_html: { class: 'form-input mt-1' }, wrapper_html: { class: 'flex flex-col my-3' } }) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
            required: false,
            autofocus: true,
            input_html: { autocomplete: "email" } %>
          <%= f.input :password,
            required: false,
            input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, input_html: { class: 'form-checkbox mr-2' }, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions mt-4">
          <%= f.button :submit, "Log in", class: 'inline-flex items-center px-3 py-2 border border-gray-300 text-sm leading-4 font-medium rounded-md text-gray-100 bg-gray-900 hover:text-gray-200 focus:outline-none focus:border-blue-300 focus:shadow-outline-blue active:text-gray-100 active:bg-gray-700 transition ease-in-out duration-150' %>
        </div>
      <% end %>
      <div class=" hidden mt-4 flex justify-between items-baseline w-full">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
